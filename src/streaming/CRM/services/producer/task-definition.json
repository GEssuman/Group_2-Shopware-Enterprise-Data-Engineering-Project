{
  "family": "CRMDataProducerTask",
  "taskRoleArn": "arn:aws:iam::985539772768:role/CRMProducerTaskRole",
  "executionRoleArn": "arn:aws:iam::985539772768:role/CRMProducerTaskRole",
  "networkMode": "awsvpc",
  "containerDefinitions": [
    {
      "name": "crm-data-producer",
      "image": "985539772768.dkr.ecr.us-east-1.amazonaws.com/crm-data-producer:latest",
      "essential": true,
      "environment": [
        { "name": "STREAM_NAME", "value": "CRMDataStream" },
        { "name": "BUCKET", "value": "crm-api-data-2025" },
        {
          "name": "API_URL",
          "value": "http://3.248.199.26:8000/api/customer-interaction/"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/CRMDataProducerTask",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs",
          "awslogs-create-group": "true"
        }
      }
    }
  ],
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "runtimePlatform": { "operatingSystemFamily": "LINUX" }
}
